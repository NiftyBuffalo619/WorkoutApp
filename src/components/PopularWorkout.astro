---
export interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---


<li style="" class="p-5 ml-5 w-72 h-72 bg-slate-950 rounded-lg">
	<img src={href} class="object-cover h-54 w-54 rounded-lg"/>
			<h2 style="font-family: 'sofia-pro';" class="text-white pt-2">{title}</h2>
			<p style="font-family: 'sofia-pro';" class="text-gray-500">{body}</p>		
</li>